.notifications
  - flash.each do |key, value|
    = content_tag(:div, value, class: key)
.Header
  = link_to "Sealless", requests_path, class: "Header__logo"
  .Header__Box
    .Header__Box__Name
      = current_user.name
    = link_to edit_user_path(current_user) do
      = icon('fa', 'cog', class: "Header__Box__icon")
    = link_to destroy_user_session_path, method: :delete do
      = icon('fa', 'door-open', class: "Header__Box__icon")